<Window x:Class="Zoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zoo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type ListViewItem}">
                <Style.Setters>
                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                </Style.Setters>
            </Style>
        </Grid.Resources>
        <ListView x:Name="lsZoo" Margin="0,0,0,200">
            <ListView.View>
                <GridView x:Name="gvZoo">
                    <GridViewColumn Header="Type" Width="200" DisplayMemberBinding="{Binding AnimalType}"/>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Energy" Width="50" DisplayMemberBinding="{Binding Energy}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Height="110" VerticalAlignment="Bottom" x:Name="Buttons">
        <StackPanel Orientation="Horizontal" Height="50" x:Name="CreateControls">
            <Button Click="CreateAnimal" Visibility="Collapsed" Tag="Breed Animal" Content="Feed All" HorizontalAlignment="Left" Height="25" Width="100" Margin="12,0"/>
                <TextBox GotFocus="NewAnimalName_GotFocus" x:Name="NewAnimalName" Width="100" Height="25" Margin="12,0" MaxLines="1" MaxLength="32" Text="Name"/>
                <Button Click="CreateAnimal" Tag="Monkey" Content="Breed Monkey" HorizontalAlignment="Left" Height="25" Width="100" Margin="12,0"/>
            <Button Click="CreateAnimal" Tag="Elephant" Content="Breed Elephant" HorizontalAlignment="Left" Height="25" Width="100" Margin="12,0"/>
            <Button Click="CreateAnimal" Tag="Lion" Content="Breed Lion" HorizontalAlignment="Left" Height="25" Width="100" Margin="12,0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="50" x:Name="FeedButtons">
            <Button Click="FeedAnimals" Tag="Animal" Content="Feed All" HorizontalAlignment="Left" Height="25" Width="100" Margin="12,0"/>
            <Button Click="FeedAnimals" Tag="Monkey" Content="Feed Monkies" HorizontalAlignment="Left" Height="25" Width="100" Margin="12,0"/>
            <Button Click="FeedAnimals" Tag="Elephant" Content="Feed Elephants" HorizontalAlignment="Left" Height="25" Width="100" Margin="12,0"/>
            <Button Click="FeedAnimals" Tag="Lion" Content="Feed Lions" HorizontalAlignment="Left" Height="25" Width="100" Margin="12,0"/>
        </StackPanel>
        </StackPanel>
    </Grid>
</Window>
